<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>
<div class="create-review">
  <div class="post row mt-4">
    <div class="col-md-12">
      <h3>Create a New Post:</h3>

      <form class="form new-project-form">
        <div class="form-group">
          <label for="movie-title">Post Title:</label>
          <input class="form-input" type="text" id="movie-title" name="movie-title" />
        </div>
        <div class="form-group">
          <label for="movie-review">Body:</label>
          <textarea class="form-input" id="movie-review" name="movie-review"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>
<div>
  {{!-- render user posts (reviews) here --}}
{{!-- requires post route --}}
  {{#if posts.length}}
  <div class="col-md-12 project-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="single-review mb-2">
      <div class="col-md-8">
        <h4>{{post.title}}</h4>
        <p>{{post.review}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<script src="./js/profile.js"></script>